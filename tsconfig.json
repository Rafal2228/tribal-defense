{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["node_modules"]
  },
  "include": ["src"]
}
